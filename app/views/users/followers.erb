<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.followed_users.any? %>
      <h3>Followings (<%= @user.followed_users.count %>)</h3>
      <ol class="microposts">
        <% @followed_users.each do |followed_user| %>
          <li id="followed_user-<%= followed_user.id %>">
            <%= link_to gravatar_for(followed_user, size: 50), followed_user %><br>
            <span class="user"><%= link_to followed_user.name, followed_user %></span>
            </span>
          </li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>